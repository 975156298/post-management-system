<%= stylesheet_link_tag 'user_center/user_center.css' %>
<%= javascript_include_tag "user_center/user_center.js" %>

<%= render "main/head" %>

<body class="main_background">
<div style="text-align: center">
  <div class="currency_frame">
    <div class="head">
      <span style="font-size: 28px;">个人中心</span>
    </div>
    <div class="block_frame" style="height: 120px;">
      <img  src="<%= @user_info[:user_image] %>" class="head_image" style="height: 90px;width: 90px;" onclick="open_upload()">
      <div onclick="jump_page('/user_information/index')">
        <span style="font-size: 28px;"><%= @user_info[:name] %></span>
        <span class="font-color" style="line-height: 45px;margin-left: 10px;"><%= @user_info[:sex] %></span>
        <span class="font-color" style="line-height: 45px;margin-left: 10px;"><%= @user_info[:age] %></span><br/><br/><br/>
        <span class="font-color left"><%= @user_info[:height] %></span>
        <span class="font-color left"><%= @user_info[:degree] %></span>
        <span class="font-color left"><%= @user_info[:star] %></span>
        <span class="font-color left"><%= @user_info[:work] %></span>
        <span class="font-color left"><%= @user_info[:address] %></span>
      </div>
    </div>
    <div class="block_frame">
      <span class="left margin-left-20" >兴趣爱好:</span><br/>
      <span onclick="get_into_hobby()" class="left font-color"><%= @user_info[:hobby] %></span>
    </div>
    <div class="block_frame" style="height: 50px;">
      <div onclick="jump_page('/comment/index')">
        <%= image_tag "arrow_right",:class => 'right_image1' %>
        <img style="display: <%= @is_read == 'false' ? 'block' : 'none' %>;" src="/remind_read_comment.png" class="red_image" />
      </div>
      <span class="left margin-left-20">评论提醒</span>
    </div>
    <div class="block_frame" style="height: 50px;">
      <div onclick="jump_page('/laud/index')">
        <%= image_tag "arrow_right",:class => 'right_image1' %>
        <img style="display: <%= @is_read_laud == 'false' ? 'block' : 'none' %>;" src="/remind_read_comment.png" class="red_image" />
      </div>
      <span class="left margin-left-20">谁赞了我</span>
    </div>
    <div class="block_frame" style="height: 50px;" onclick="revise_psw()">
      <span class="left margin-left-20">修改密码</span>
    </div>
    <div class="upload_image_fram">
      <div style="width: 200px;height: 35px;">
        <button class="close_button" onclick="close_upload()">关闭</button>
      </div>
      <img src="<%= @user_info[:user_image] %>" id="upload_image" class="upload_image">
      <p class="font-color" style="font-size:22px;margin:10px 0;">上传图片</p>
      <%= form_tag 'add_image', :multipart => true do%>
          <%= file_field_tag :localfile,class:'choose_button',onchange:'preview_image(this)' %><br>
          <%= submit_tag "上传",class:'upload_button'%>
      <% end %>
    </div>
  </div>
</div>


<div class="edit_note">
  <div class="edit_note_fram" style="height: 200px;">
    <div style="margin-top: 15px;">
      <div>
        <label for="psw">新密码</label>
        <input id="psw" type="password" placeholder="新密码"/>
      </div>
      <div>
        <label for="re_psw">重复新密码</label>
        <input id="re_psw" type="password" placeholder="重复新密码"/>
      </div>
      <button onclick="confirm_revise_pas()">确定</button>
      <button onclick="cancel()">取消</button>
    </div>
  </div>
</div>

</body>